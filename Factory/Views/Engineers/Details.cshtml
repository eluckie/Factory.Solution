@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>@Model.Name</h2>
<h4>@Model.Pronouns</h4>
<ul>
  <li>Hire Date: @Model.HireDate.ToString("d")</li>
  <li>Certifications 
    <ul>
      @if (Model.Repairs.Count == 0)
      {
        <p>No dice! Teach them some things</p>
      }
      else
      {
        @foreach (Repair tech in Model.Repairs)
        {
          <li>@Html.ActionLink(@tech.Machine.Name, "Details", "Machines") | @tech.Machine.Description</li>
        }
      }
    </ul>
  </li>
</ul>

<p>@Html.ActionLink($"Give {Model.Name} some robots", "AddRepairs", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Manage engineers", "Index")</p>
<p>@Html.ActionLink("Manage machines", "Index", "Machines")</p>
<p>@Html.ActionLink("All the way nvm", "Index", "Home")</p>