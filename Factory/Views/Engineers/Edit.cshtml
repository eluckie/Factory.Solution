@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2 id="details">Change <span id="ename">@Model.Name</span></h2>

<div id="details">
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @style = "font-weight:600; color:red;"})</p>
  <span id="accent">@Html.LabelFor(model => model.Name)</span>
  @Html.TextBoxFor(model => model.Name)
  <p>@Html.ValidationMessageFor(model => model.Pronouns, "", new { @style = "font-weight:600; color:red;"})</p>
  <span id="accent">@Html.LabelFor(model => model.Pronouns)</span>
  @Html.TextBoxFor(model => model.Pronouns)
  <p>@Html.ValidationMessageFor(model => model.HireDate, "", new { @style = "font-weight:600; color:red;"})</p>
  <span id="accent">@Html.Label("Hire Date")</span>
  @Html.EditorFor(model => model.HireDate)
  <br><br>
  <input type="submit" value="Let it happen" id="larger-button">
}
</div>
<hr>

<p id="elink">@Html.ActionLink("NVM NVM NVM", "Details", new { id = Model.EngineerId })</p>
<p id="elink">@Html.ActionLink("Manage engineers", "Index")</p>
<p id="mlink">@Html.ActionLink("Manage machines", "Index", "Machines")</p>
<p id="hlink">@Html.ActionLink("All the way nvm", "Index", "Home")</p>